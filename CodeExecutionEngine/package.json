{
  "name": "code-execution-engine",
  "version": "1.0.0",
  "description": "Production-grade code execution engine for coding platforms",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -f docker/Dockerfile.python -t codeexec-python .",
    "docker:build-all": "npm run docker:build && docker build -f docker/Dockerfile.java -t codeexec-java . && docker build -f docker/Dockerfile.cpp -t codeexec-cpp . && docker build -f docker/Dockerfile.javascript -t codeexec-javascript .",
    "clean": "rimraf node_modules logs/*.log"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dockerode": "^3.3.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.0",
    "prom-client": "^14.2.0",
    "redis": "^4.6.7",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "services/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/logs/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
